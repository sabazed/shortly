{
  "id": null,
  "title": "Database & Cache",
  "tags": ["database", "cache", "postgres", "redis"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Database Connections",
      "type": "timeseries",
      "targets": [
        {
          "expr": "postgres_connections_active",
          "legendFormat": "Active Connections"
        },
        {
          "expr": "postgres_connections_idle",
          "legendFormat": "Idle Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Database Query Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(postgres_queries_total[5m])",
          "legendFormat": "Queries/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "qps"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Redis Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "legendFormat": "Memory Used"
        },
        {
          "expr": "redis_memory_max_bytes",
          "legendFormat": "Memory Max"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Redis Commands Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "Commands/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}